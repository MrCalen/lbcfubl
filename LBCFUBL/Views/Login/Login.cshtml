@model LBCFUBL.Models.Login
@{
    ViewBag.Title = "Login";
}

@section bodyclass {
    class="background-theme"
}

@section css {
    @Styles.Render("~/Content/login.css")
}

<div>
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <h2 class="title white text-center">Les <b>Bons</b> Comptes Font Un <b>Bon</b> Lab</h2>
        </div>
        <div class="row container-fluid">
            <div class="col-md-6">
                <div class="container-fluid row">
                    <div class="row">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">

                            @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                            {
                                @Html.LabelFor(m => m.Username)
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username)
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </label>
                                <br />
                                <button type="submit" class="form-control btn login-btn">Log in</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 hidden-sm">
                <img src="https://acu.epita.fr/yaka2017_logo.png" class="img img-responsive pull-right" style="max-height: 500px;">
            </div>
        </div>
    </div>
</div>