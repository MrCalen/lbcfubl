@{
    ViewBag.Title = "Purchases";
}

@section css {
    @Styles.Render("~/Content/home.css")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.6/Chart.min.js"></script>
}

@section scripts {
<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
        datasets: [{
            label: '# of Votes',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
}

<div class="row">
    <div class="panel panel-primary">
    <div class="panel-heading">Graphes</div>
        <div class="panel-body">
            <canvas id="myChart"></canvas>
        </div>
    </div>
</div>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">Historique des achats</div>
        <div class="panel-body">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Date</th>
                        <th>Ajouté par</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var purchase in ViewBag.Purchases)
                    {
                        <tr>
                            <td>@purchase.Product.name</td>
                            <td>@Math.Round(purchase.Product.cost_with_margin, 2)€</td>
                            <td>@purchase.date</td>
                            <td>@purchase.added_by</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">Historique des accomptes</div>
        <div class="panel-body">
            @if (ViewBag.Accounts.Length > 0)
            {
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Valeur</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in ViewBag.Accounts)
                    {
                        <tr>
                            <td>@account.argent €</td>
                            <td>@account.date</td>
                        </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <h4>Pas d'accomptes faits</h4>
            }
        </div>
    </div>
</div>